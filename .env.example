# MongoDB
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/majestic-chat

# Redis (for Socket.io scaling)
REDIS_URL=redis://localhost:6379

# JWT (REQUIRED - same secret as server.me for token verification)
# Server will fail to start if not set
JWT_SECRET=your-jwt-secret

# Server
PORT=3001

# CORS Origins (REQUIRED for production)
# Comma-separated list of allowed origins
# If not set, defaults to localhost origins for development only
# Example: CORS_ORIGIN=https://www.majesticescape.in,https://admin.majesticescape.in
CORS_ORIGIN=https://www.majesticescape.in

# Main API URL (for property/host validation)
# Used to verify hostId matches property owner when creating conversations
MAIN_API_URL=https://api.majesticescape.in/api/v1

# Optional: External auth verification
AUTH_SERVICE_URL=https://api.majesticescape.in/auth/verify
